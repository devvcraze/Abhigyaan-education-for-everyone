<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"

        android:orientation="vertical"

        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="237dp"
            >

            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="481dp"
                android:autoStart="true"
                android:flipInterval="2400"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/a" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="-4dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/b" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/g" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    app:srcCompat="@drawable/d" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_marginTop="-10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/e" />
                <ImageView
                    android:id="@+id/imageView15"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/h" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_marginTop="-8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo2" />
            </ViewFlipper>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_verticals"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            android:onClick="onCardClick"
            android:layout_marginTop="-30dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/verticals_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:textStyle="bold"

                android:gravity="center"
                android:text="Verticals"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_events"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"

            android:onClick="onCardClick"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/events_text"
                android:layout_height="match_parent"
                android:fontFamily="@font/belgrano"
                android:background="@drawable/vac"
                android:gravity="center"
                android:text="Events"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_gallery"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            android:layout_marginHorizontal="8dp"

            android:onClick="onCardClick"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gallery_text"
                android:background="@drawable/vac"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Gallery"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_about"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="8dp"

            android:onClick="onCardClick"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:gravity="center"
                android:id="@+id/about_text"
                android:textStyle="bold"
                android:fontFamily="@font/belgrano"
                android:text="About Abhigyaan"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_coordination"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            android:onClick="onCardClick"

            android:layout_marginHorizontal="8dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:gravity="center"
                android:id="@+id/coordination_text"
                android:fontFamily="@font/belgrano"
                android:textStyle="bold"
                android:text="Coordinating Committee"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_feedback"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            android:onClick="onCardClick"
            android:layout_marginHorizontal="8dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/belgrano"
                android:text="Feedback Page"
                android:id="@+id/feedback_text"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_contact"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="8dp"

            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:gravity="center"
                android:fontFamily="@font/belgrano"
                android:text="Contact Us"
                android:textStyle="bold"


                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>