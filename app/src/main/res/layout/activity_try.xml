<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="237dp">

                <ViewFlipper
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="481dp"
                    android:autoStart="true"
                    android:flipInterval="2400"
                    android:inAnimation="@android:anim/slide_in_left"
                    android:outAnimation="@android:anim/slide_out_right"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/anubhav3" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/anubhav2" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/anubhav5" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20dp"
                        app:srcCompat="@drawable/anubhav8" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_marginTop="-10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/anubhav9" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/anubhav1" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/anubhav6" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_marginTop="-8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/anubhav8" />
                </ViewFlipper>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_verticals"
                android:layout_width="380dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/vac"
                android:onClick="onCardClick"
                android:layout_marginTop="-30dp"
                android:padding="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    android:background="@drawable/vac"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                       android:paddingLeft="40dp"
                        android:background="@drawable/vac"
                        android:src="@drawable/volunteernew"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/verticals_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:textStyle="bold"
                        android:paddingLeft="50dp"
                        android:gravity="center_vertical"
                        android:text="Verticals"
                        android:fontFamily="@font/belgrano"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_events"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="8dp"
                android:elevation="8dp"
                android:onClick="onCardClick"
                android:padding="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/vac"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:background="@drawable/vac"
                        android:src="@drawable/event"
                        android:layout_marginEnd="8dp"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/events_text"
                        android:fontFamily="@font/belgrano"
                        android:paddingLeft="70dp"
                        android:gravity="center_vertical"
                        android:text="Events"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_gallery"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:elevation="8dp"
                android:layout_marginHorizontal="8dp"
                android:onClick="onCardClick"
                android:padding="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/vac"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:background="@drawable/vac"
                        android:src="@drawable/picture"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/gallery_text"
                        android:background="@drawable/vac"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:paddingLeft="70dp"
                        android:text="Gallery"
                        android:fontFamily="@font/belgrano"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_about"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp"
                android:elevation="8dp"
                android:onClick="onCardClick"
                android:padding="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/vac"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:background="@drawable/vac"
                        android:src="@drawable/explain"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vac"
                        android:gravity="center_vertical"
                        android:id="@+id/about_text"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/belgrano"
                        android:text="About Abhigyaan"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_coordination"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:elevation="8dp"
                android:onClick="onCardClick"
                android:layout_marginHorizontal="8dp"
                android:padding="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/vac"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:background="@drawable/vac"
                        android:src="@drawable/communication"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vac"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:id="@+id/coordination_text"
                        android:fontFamily="@font/belgrano"
                        android:textStyle="bold"
                        android:text="Coordinating Committee"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_feedback"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:elevation="8dp"
                android:onClick="onCardClick"
                android:layout_marginHorizontal="8dp"
                android:padding="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/vac"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:background="@drawable/vac"
                        android:src="@drawable/feedback"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vac"
                        android:gravity="center_vertical"
                        android:paddingLeft="30dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/belgrano"
                        android:text="Feedback Page"
                        android:id="@+id/feedback_text"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_contact"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp"
                android:elevation="8dp"
                android:padding="16dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/vac"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:background="@drawable/vac"
                        android:src="@drawable/message"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/vac"
                        android:gravity="center_vertical"
                        android:paddingLeft="40dp"
                        android:fontFamily="@font/belgrano"
                        android:text="Contact Us"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="#DFE0E8"
        app:srcCompat="@drawable/volunteer"
        android:contentDescription="Profile" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
