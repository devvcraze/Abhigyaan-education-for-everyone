<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".volunteer_english_batch"

        >
        <androidx.cardview.widget.CardView

            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="8dp"

            android:elevation="8dp"

            android:background="#000000"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"


            app:cardCornerRadius="16dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textStyle="bold"


                android:gravity="center"
                android:text="Today's Volunteers"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/black"
                android:textSize="35sp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="8dp"

            android:elevation="8dp"

            android:background="#000000"

            android:layout_gravity="center_horizontal"


            app:cardCornerRadius="16dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textStyle="bold"


                android:gravity="center"
                android:text="DAY"
                android:id="@+id/day"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/black"
                android:textSize="35sp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/member1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:textStyle="bold"


                android:gravity="center"
                android:text="Volunteer 1"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_verticals"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"

            android:layout_gravity="center_horizontal"

            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/member2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:textStyle="bold"

                android:gravity="center"
                android:text="Volunteer 2"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_events"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            android:layout_gravity="center"


            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/member3"
                android:layout_height="match_parent"
                android:fontFamily="@font/belgrano"
                android:background="@drawable/vac"
                android:gravity="center"
                android:text="Volunteer 3"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_gallery"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            android:layout_marginHorizontal="8dp"


            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/member4"
                android:background="@drawable/vac"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Volunteer 4"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_about"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="75dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="8dp"


            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:gravity="center"
                android:id="@+id/member5"
                android:textStyle="bold"
                android:fontFamily="@font/belgrano"
                android:text="Volunteer 5"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_coordination"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"

            android:layout_gravity="center"

            android:layout_marginHorizontal="8dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:gravity="center"
                android:id="@+id/member6"
                android:fontFamily="@font/belgrano"
                android:textStyle="bold"
                android:text="Volunteer 6"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_feedback"
            android:layout_width="350dp"
            android:layout_height="75dp"

            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            android:layout_gravity="center"

            android:layout_marginHorizontal="8dp"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/belgrano"
                android:text="Volunteer 7"
                android:id="@+id/member7"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_contact"
            android:layout_width="350dp"
            android:layout_height="75dp"

            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="8dp"

            android:layout_gravity="center"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:gravity="center"
                android:id="@+id/member8"
                android:fontFamily="@font/belgrano"
                android:text="Volunteer 8"
                android:textStyle="bold"


                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="350dp"
            android:layout_height="75dp"

            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:elevation="8dp"

            android:layout_gravity="center"
            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:gravity="center"
                android:fontFamily="@font/belgrano"
                android:text="Volunteer 9"
                android:textStyle="bold"
                android:id="@+id/member9"


                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="8dp"
            android:onClick="onCardClick"
            android:layout_gravity="center_horizontal"

            android:padding="16dp"
            app:cardCornerRadius="16dp">

            <TextView
                android:id="@+id/member10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vac"
                android:textStyle="bold"

                android:gravity="center"
                android:text="Volunteer 10"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>






    </LinearLayout>
</ScrollView>