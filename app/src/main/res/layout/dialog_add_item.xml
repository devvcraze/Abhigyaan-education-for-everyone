<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title" />

    <EditText
        android:id="@+id/sectionEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Section 1" />

    <EditText
        android:id="@+id/sectionEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Section 2" />

    <EditText
        android:id="@+id/sectionEditText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Section 3" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="150dp"
        android:backgroundTint="#075931"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Add" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:backgroundTint="#EA2F2F"
        android:layout_height="wrap_content"
        android:text="Cancel" />
</LinearLayout>
