<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:transitionName="logo_image"
            android:contentDescription="@string/todo"
            android:src="@drawable/abhigyaan_logo" />

        <ImageView
            android:id="@+id/logogoa"
            android:layout_width="90dp"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center_vertical"
            android:layout_height="120dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/bitslogo" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/belleza"
        android:text="Hello!  Welcome"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bold"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:fontFamily="@font/antic"
        android:text="@string/sign_in_to_continue"
        android:textSize="22sp"
        tools:ignore="TextSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernamemain"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_togglemain"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/googleg_standard_color_18" />

        <Button
            android:id="@+id/mainsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4F5F8"
            android:fontFamily="@font/belleza"
            android:padding="10dp"
            android:text="Sign in with Google"
            android:textColor="#090000"
            android:textSize="18sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <!-- New ViewFlipper with 6 TextViews -->
    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoStart="true"
        android:flipInterval="3500"
        android:inAnimation="@anim/nav_default_pop_enter_anim"
        android:outAnimation="@anim/nav_default_pop_exit_anim">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/belgrano"
            android:text="Welcome to our Abhigyaan!"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2197B8"
            android:text="Empowering minds with free education, nurturing talents, and providing a path to a brighter future."
            android:textAlignment="center"
            android:fontFamily="@font/belgrano"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="'The best way to find yourself is to lose yourself in the service of others.' - Mahatma Gandhi"
            android:textAlignment="center"
            android:textColor="#cf2027"
            android:fontFamily="@font/belgrano"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To educate a man in mind and not in morals is to educate a menace to society. - Theodore Roosevelt"
            android:textAlignment="center"
            android:textColor="#283CAD"
            android:fontFamily="@font/belgrano"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education is the key to unlock the golden door of freedom. - George Washington Carver"
            android:textAlignment="center"
            android:textColor="#b78a2d"
            android:fontFamily="@font/belgrano"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breaking barriers with free education, empowering communities, and providing essential sustenance"
            android:textAlignment="center"
            android:textColor="#0B7944"
            android:fontFamily="@font/belgrano"
            android:textSize="18sp" />

    </ViewFlipper>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:outlineAmbientShadowColor="@color/purple_700"
        app:cardCornerRadius="20dp"
        android:elevation="50dp"
        android:layout_marginTop="10dp">

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="10dp"
        android:elevation="25dp"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_height="wrap_content">
        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="481dp"
            android:autoStart="true"
            android:flipInterval="2600"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/anubhav3" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/anubhav2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/anubhav5" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                app:srcCompat="@drawable/anubhav8" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_marginTop="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/anubhav9" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/anubhav1" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/anubhav6" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_marginTop="-8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/anubhav8" />
        </ViewFlipper>

    </androidx.cardview.widget.CardView>


</LinearLayout>