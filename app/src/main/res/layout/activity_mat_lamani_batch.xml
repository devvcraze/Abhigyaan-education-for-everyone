<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dac"
    android:orientation="vertical"
    tools:context=".mat_lamani_batch">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#DBD0D0"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tutorials"
        app:cardCornerRadius="25dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:src="@drawable/homwork"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Worksheets"
            android:textSize="25dp"
            android:gravity="center"
            android:fontFamily="@font/belgrano"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#DBD0D0"
        android:layout_marginTop="20dp"
        android:id="@+id/Books"
        app:cardCornerRadius="25dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/book"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Books"
            android:textSize="25dp"
            android:gravity="center"
            android:fontFamily="@font/belgrano"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"

        app:cardBackgroundColor="#DBD0D0"
        android:layout_marginTop="20dp"
        android:id="@+id/Past"
        app:cardCornerRadius="25dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/question"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="      Past Year Papers"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:gravity="center"
            android:fontFamily="@font/belgrano"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/add"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#00000000"
        android:layout_marginTop="100dp"

        app:cardCornerRadius="200dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/add"


                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Add Materials"
                android:fontFamily="@font/belgrano"
                android:textColor="@color/white"

                android:textSize="30dp"
                android:layout_marginTop="15dp"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>